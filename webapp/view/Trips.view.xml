<mvc:View
	controllerName="ui5.awc.demo.controller.Trips"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic"
	xmlns:awc="ui5.awc">

	<semantic:SemanticPage
		id="mySemanticPage"
		headerPinnable="true"
		headerExpanded="true"
		toggleHeaderOnTitleClick="true"
		preserveHeaderStateOnScroll="false"
		showFooter="false"
		class="custom-page">

		<!-- Title Heading-->
		<semantic:titleHeading>
			<Title text="{i18n>uiStructureExampleName}"/>
		</semantic:titleHeading>

		<semantic:titleSnappedContent>
			<Text text="{i18n>sampleShortDescription}"/>
		</semantic:titleSnappedContent>

		<semantic:headerContent>
			<!--<Slider showAdvancedTooltip="true" enableTickmarks="true" min="-30" max="0" value="{appView>/daysLeft}" change="onDaysLeftChange"/>-->
			<u:CalendarDateInterval
				id="calendar"
				days="14"
				width="100%"
				showDayNamesLine="false"
				select="onDateSelected"
				showWeekNumbers="false" >
				<!--<u:selectedDates>
					<u:DateRange
						startDate="{
					path: '{tripDetails>/beginDate}',
					formatter: '.formatter.stringToDate'
					}" endDate="{
					path: '{tripDetails>/beginDate}',
					formatter: '.formatter.stringToDate'
					}" />
				</u:selectedDates>
				<u:specialDates>
					<u:DateTypeRange
						startDate="{
					path: '{tripDetails>/beginDate}',
					formatter: '.formatter.stringToDate'
					}"
					type="Type01"/>
				</u:specialDates>-->
			</u:CalendarDateInterval>
		</semantic:headerContent>

		<!-- Content -->
		<semantic:content>
			<VBox>
				<Panel  class="ui5_awc_trip">
					<HBox>
						<core:Icon src="sap-icon://{tripDetails>/icon}" class="ui5_awc_trip__icon" />
						<VBox>
							<Text text="{tripDetails>/title}" class="ui5_awc_trip__title"/>
							<Text text="{tripDetails>/beginDate} - {tripDetails>/out_destinationTime1}"  class="ui5_awc_trip__dates" />
						</VBox>
					</HBox>

					<awc:TripDetails details="{tripDetails>/plan}" />
				</Panel>

			<List id="tripsList" items="{trips>/}" class="">
				<items>
					<CustomListItem class="ui5-awc__tripsItem" >
						<core:Icon src="sap-icon://{trips>icon}" />
						<Text text="{trips>title}" class="ui5-awc__title"/>
						<Text
							text="{
								path: 'trips>out_departureTime0',
								formatter: '.formatter.dateFormat'
								}"/>
						<Text
							text=" - "/>
						<Text
							text="{
								path: 'trips>out_departureTime0',
								formatter: '.formatter.dateFormat'
								}"/>
					</CustomListItem>
				</items>
			</List>
			</VBox>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>
